  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "./node_modules/.bin/jest",
        "--config",
        "jest.debugger.json",
        "-i",
        "--env",
        "jest-environment-node-debug"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "sourceMaps": true
    }
  ]
}